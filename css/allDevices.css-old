/*
 * allDevices.css: styles for all devices
 */
body {
	font-family:      Verdana, Arial, Helvetica, sans-serif;
	background-color: #ffffff;
}
h1, h2 {
	text-align:  center;
}
h1 {
	font-size:     2.0em;
	margin-bottom: 0.0em;
}
h2 {
	font-size:     1.75em;
	margin-bottom: 0.0em;
}
ul {
	margin: 0.0em;
	padding: 1.0em;
}
a, li, p, li li  {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size:     1.0em;
	margin-bottom: 0.0em;
}
a, a:link, a:hover, a:visited  {
	color:           #000000;
	text-decoration: underline;
}
a:hover {
	color:       #0000ff;
	font-weight: bold;
	font-size:   1.20em;
}
a:active {
	color:       #ff0000;
	font-weight: bold;
}
img {
	border: none;
}
div.content {
	position: relative;
}
.bold {
	font-weight: bold;
}
.underline {
	text-decoration: underline;
}
li div.hide  {
	display: none;
}
div#footer {
	display: inline;
	margin-top: 3.0em;
	text-align: center;
}
li.footer_links {
	display: inline;
	text-align: center;
	margin:  0.25em;
	padding: 0.25em;
}
p.footer {
	text-align: center;
}
